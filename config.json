{
  "model": {
    "name": "google/medgemma-4b-it",
    "quantization": {
      "enabled": true,
      "bits": 4,
      "type": "nf4",
      "double_quant": true,
      "compute_dtype": "bfloat16"
    },
    "generation": {
      "max_new_tokens": 1024,
      "temperature": 0.7,
      "top_p": 0.9,
      "do_sample": false,
      "repetition_penalty": 1.1
    },
    "gpu": {
      "max_memory_gb": 4.5,
      "low_cpu_mem_usage": true,
      "device_map": "auto"
    }
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "reload": false,
    "cors": {
      "enabled": true,
      "allow_origins": [
        "*"
      ]
    }
  },
  "upload": {
    "max_file_size_mb": 10,
    "allowed_image_formats": [
      "jpg",
      "jpeg",
      "png",
      "dcm"
    ],
    "max_image_dimension": 4096
  },
  "cache": {
    "enabled": true,
    "clear_on_shutdown": false
  },
  "languages": {
    "default": "tr",
    "supported": [
      "tr",
      "en"
    ]
  },
  "features": {
    "patient_context": {
      "enabled": true,
      "default_visible": false
    },
    "streaming": true,
    "example_images": true
  }
}